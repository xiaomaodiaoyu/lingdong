<% provide(:title, t(:welcome_title)) %>
<div class="container">
  <div class="hero-unit">
      <h1><%= @headline %></h1>
      <h2><%= @subline %></h2>
  </div>
  <div class="row introduction">
    <%= render partial: 'column', locals: { icon_name: "lightbulb", point: @first_point, description: @first_description } %>
    <%= render partial: 'column', locals: { icon_name: "group", point: @second_point, description: @second_description } %>
    <%= render partial: 'column', locals: { icon_name: "key", point: @third_point, description: @third_description } %> 
  </div>
</div>